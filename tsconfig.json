{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2017.object"
    ],
    "types": [
      "reflect-metadata",
      "node"
    ],
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}